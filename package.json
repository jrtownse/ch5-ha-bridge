{
  "name": "ch5-ha-bridge",
  "private": true,
  "version": "4.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:dev": "tsc && NODE_ENV=development vite build --mode development",
    "build:prod": "tsc && vite build --mode production",
    "archive": "ch5-cli archive -p ch5-ha-bridge -d dist -o archive",
    "deploy:panel": "ch5-cli deploy -p -H 0.0.0.0 -t touchscreen archive/ch5-ha-bridge.ch5z --slow-mode",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@crestron/ch5-crcomlib": "^2.11.2",
    "@crestron/ch5-theme": "^2.11.2",
    "mqtt": "^5.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "inversify": "alpha"
  },
  "devDependencies": {
    "@crestron/ch5-shell-utilities-cli": "^2.11.2",
    "@crestron/ch5-utilities-cli": "^2.0.0",
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eruda": "^3.4.1",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "reflect-metadata": "^0.2.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-pwa": "^0.21.1",
    "vite-plugin-singlefile": "^2.1.0",
    "vite-plugin-static-copy": "^2.2.0"
  }
